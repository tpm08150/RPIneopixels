<MyLayout>
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        size: root.width,  250
        
        
        Label:
            id: slider_label_red
            text: "Red"
            font_size: 40

           
        Slider:
            id: slider_red
            min: 0
            max: 255
            step: 1
            orientation: "vertical"
            on_value: root.slide_it_red(*args)
            value: 0
            value_track: True
            value_track_width: 6
            value_track_color: 'red'
        
        Label:
            id: slider_label_green
            text: "Green"
            font_size: 40
           
        Slider:
            id: slider_green
            min: 0
            max: 255
            step: 1
            #height: 300
            orientation: "vertical"
            on_value: root.slide_it_green(*args)
            value: 0
            value_track: True
            value_track_width: 6
            value_track_color: 'green'
        
